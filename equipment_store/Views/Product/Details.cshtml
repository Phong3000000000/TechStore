                                <div class="carousel-inner">
                                    <div class="item active">
                                        @foreach (var item in @ViewBag.relatedproducts as IEnumerable<ProductModel>)
                                        {
                                            <div class="col-sm-4">
                                                <div class="product-image-wrapper">
                                                    <div class="single-products">
                                                        <div class="productinfo text-center">
                                                            <img src="~/media/products/@item.Image" alt="" />
                                                            <h2>@item.Price.ToString("#,##0 VNĐ")</h2>
                                                            <p>@item.Name</p>
                                                            <button class="btn btn-default add-to-cart" data-product_id="@item.Id">
                                                                <i class="fa fa-shopping-cart"></i>Thêm vào giỏ
