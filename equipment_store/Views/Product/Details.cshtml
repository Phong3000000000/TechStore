                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        }
                                    </div>
                                </div>
                                <a class="left recommended-item-control" href="#recommended-item-carousel" data-slide="prev">
                                    <i class="fa fa-angle-left"></i>
                                </a>
                                <a class="right recommended-item-control" href="#recommended-item-carousel" data-slide="next">
                                    <i class="fa fa-angle-right"></i>
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </div>

    @section Scripts {
        @{
            await Html.RenderPartialAsync("_ValidationScriptsPartial");
        }
        <script>
            $(document).ready(function () {
                // Xử lý đánh giá sao
                $('.stars .star').on('click', function () {
                    var value = $(this).data('value');

                    // Cập nhật giao diện sao
                    $('.stars .star').each(function () {
                        var starValue = $(this).data('value');
                        $(this).removeClass('filled');
                        if (starValue <= value) {
                            $(this).addClass('filled');
                        }
                    });

                    // Cập nhật giá trị trường ẩn
                    $('input[name="Star"]').val(value);
                });

                // Xử lý hover để xem trước đánh giá
                $('.stars .star').on('mouseover', function () {
                    var value = $(this).data('value');
                    $('.stars .star').each(function () {
                        var starValue = $(this).data('value');
                        $(this).removeClass('filled');
                        if (starValue <= value) {
                            $(this).addClass('filled');
                        }
                    });
                });

                // Khôi phục trạng thái khi rời chuột
                $('.stars').on('mouseout', function () {
                    var currentValue = parseFloat($('input[name="Star"]').val()) || 0;
                    $('.stars .star').each(function () {
                        var starValue = $(this).data('value');
                        $(this).removeClass('filled');
                        if (starValue <= currentValue) {
                            $(this).addClass('filled');
                        }
                    });
                });

                // Xử lý nút "Add to cart"
                $('.add-to-cart').click(function () {
                    var Id = $(this).data("product_id");
                    $.ajax({
                        type: "POST",
                        url: "@Url.Action("Add", "Cart")",
                        data: { Id: Id },
                        success: function (result) {
                            if (result) {
                                Swal.fire({
                                    title: "Thêm giỏ hàng thành công",
                                    icon: "success",
                                    draggable: true
                                });
                            }
                        }
                    });
                });
            });
        </script>
    }
</body>
</html>