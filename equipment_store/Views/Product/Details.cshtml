@model ProductDetailsViewModel
<!DOCTYPE html>
<html>
<head>

    <style>
        .star-rating {
            margin: 15px 0;
            display: flex;
            align-items: center;
        }

            .star-rating label {
                margin-right: 10px;
                font-weight: bold;
            }

        .stars {
            display: inline-block;
            font-size: 20px;
            cursor: pointer;
        }

            .stars .star {
                display: inline-block; /* Đảm bảo các sao nằm ngang */
                position: relative;
                color: #ccc; /* Màu sao rỗng */
                margin-right: 2px; /* Khoảng cách giữa các sao */
            }

                .stars .star.filled {
                    color: #f39c12; /* Màu sao đầy */
                }

                .stars .star:hover,
                .stars .star:hover ~ .star {
                    color: #ccc; /* Đặt lại màu khi hover */
                }
    </style>
</head>
<body>
    <div>
        <section>
            <div class="container">
                <div class="row">
                    <div class="col-sm-3">
                        @Html.Partial("_SidebarPartial")
                    </div>

                    <div class="col-sm-9 padding-right">
                        <div class="product-details">
                            <div class="col-sm-5">
