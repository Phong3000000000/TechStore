﻿@{
    ViewData["title"] = "List Compare";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />

</head>
<body>
    <h3>List Compare</h3>


    <table class="table" id="myTable">
        <thead>
            <tr>
                <th>Id</th>
                <th>Product Name</th>
                <th>Product Description</th>
                <th>Product Price</th>
                <th>Product Image</th>
                <th>Option</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var compare_product in Model)
            {
                <tr>
                    <td>@compare_product.Compare.Id</td>
                    <td>@compare_product.Product.Name</td>
                    <td>@Html.Raw(@compare_product.Product.Description)</td>
                    <td>@compare_product.Product.Price.ToString("#,##0 VNĐ")</td>
                    <td> <img src="~/media/products/@compare_product.Product.Image" width="120px" height="150px" /> </td>
                    <td><a class="btn btn-danger btn-sm confirmDeletion" asp-action="DeleteCompare" asp-controller="Home" asp-route-Id="@compare_product.Compare.Id">Delete</a></td>
                </tr>
            }
        </tbody>
    </table>
</body>

</html>