@model LoginViewModel

<section id="form">
	<!--form-->
	<div class="container">
		<div class="row">
			<div class="col-sm-8 col-sm-offset-1">
				<div class="login-form">
					<!--login form-->
					<h2>Login to your account</h2>
					<div asp-validation-summary="ModelOnly" class="text-danger"></div>
					<form asp-action="Login" asp-controller="Account">
						
						<div class="form-group">
							<label>UserName</label>
							<input asp-for="Username" placeholder="Name" class="form-control" />
							<span asp-validation-for="Username" class="text-danger"></span>
						</div>
						<div class="form-group">
							<label>PassWord</label>
							<input asp-for="Password" placeholder="Password" class="form-control" />
							<span asp-validation-for="Password" class="text-danger"></span>
						</div>
				
						<button type="submit" class="btn btn-default">Login</button>
					</form>
					<span>
						<a asp-action="Signup" asp-controller="Account">Sign up here</a>
					</span>
				</div><!--/login form-->
			</div>
		</div>
	</div>
</section><!--/form-->
@section Scripts {
	@{
		await Html.RenderPartialAsync("_ValidationScriptsPartial");

	}
}