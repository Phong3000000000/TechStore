@model equipment_store.Models.ProductModel

<div class="col-9-md">
    <form style="width:50%; margin:20px auto" asp-action="Remove" enctype="multipart/form-data">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <h2 style="text-align:center">Xác nhận xóa sản phẩm</h2>
        <div style="text-align:center" class="form-group">
            <img width="150px" src="~/media/products/@Model.Image" />
        </div>
        <div class="form-group">
            <label>Name</label>
            <input class="form-control" asp-for="Name" />
        </div>
        <div class="form-group">
            <label>Slug</label>
            <input class="form-control" asp-for="slug" />
        </div>
        <div class="form-group">
            <label>Description</label>
            <textarea class="form-control" asp-for="Description" rows="4"></textarea>
        </div>
        <div class="form-group">
            <label>Price</label>
            <input class="form-control" asp-for="Price" />
        </div>
        <div class="form-group">
            <label>Brand</label>
            <select class="form-control" asp-for="BrandId" asp-items="@ViewBag.Brands"></select>
        </div>
        <div class="form-group">
            <label>Category</label>
            <select class="form-control" asp-for="CategoryId" asp-items="@ViewBag.Categories"></select>
        </div>
  
        <div style="float:right">
            <a asp-action="Index" asp-controller="Product" class="btn btn-danger btn-sm">Back</a>
            <input type="submit" class="btn btn-success btn-sm" value="Remove" />
        </div>
     

    </form>

</div>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");

    }
    <script src="https://cdn.ckeditor.com/4.22.1/standard/ckeditor.js"></script>
    <script>
        CKEDITOR.replace('Description');
    </script>
}