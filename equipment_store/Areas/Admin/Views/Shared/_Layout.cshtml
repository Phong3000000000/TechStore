	<script>
		$(function () {
			var message = '@TempData["success"]';
			if (message != '') {
				Swal.fire({
					title: message,
					imageUrl: "https://cdn-icons-png.flaticon.com/512/1055/1055687.png", // icon công nghệ cute
					imageWidth: 100,
					imageHeight: 100,
					imageAlt: "Laptop icon",
					background: "#f8fafc url('https://www.transparenttextures.com/patterns/cubes.png')", // background nhẹ nhàng kiểu tech
					color: "#0f172a", // màu chữ đậm hiện đại
					confirmButtonText: "Ok",
					confirmButtonColor: "#6366f1",
					width: 500,
					padding: "3em",
				});
			}

		})
	</script>


	<script>
		let table = new DataTable('#myTable', {
			layout: {
				topStart: {
					buttons: ['copy', 'csv', 'excel', 'pdf', 'print']
				}
			}
		});
	</script>


	@await RenderSectionAsync("Scripts", required:false);

</body>
