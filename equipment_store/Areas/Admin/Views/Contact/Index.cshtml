@model IEnumerable<ContactModel>
@{
    ViewData["title"] = "Contact Info";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Contact</title>
</head>
<body>
    <h3>List Contact</h3>
    <div class="table table-responsive">
        <a class="btn btn-success btn-sm" asp-action="Create" asp-controller="Contact"><i class="fa-solid fa-plus"></i></a>
        <table class="table table-responsive" id="myTable">
        <thead>
            <tr>
                <th>Name</th>
                <th>Description</th>
                <th>Map</th>
                <th>Email</th>
                <th>Logo</th>
                <th>Phone</th>
               
                <th>Option</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    
                    <td>@item.Name</td>
                    <td>@Html.Raw(@item.Description)</td>
                    <td>@Html.Raw(@item.Map)</td>
                    <td>@item.Email</td>
                    <td> <img src="~/media/logo/@item.LogoImg" width="120px" height="150px" /> </td>
                    <td> @item.Phone </td>
                 
                        <td style="display:flex;">
                            <a style="margin-right:6px" class="btn btn-warning btn-sm" asp-action="Edit" asp-controller="Contact" asp-route-Id="@item.Id"><i class="fa-solid fa-pen-nib"></i></a>
                            <a class="btn btn-danger btn-sm confirmDeletion" asp-action="Remove" asp-controller="Contact" asp-route-Id="@item.Id"><i class="fa-solid fa-trash"></i></a>
                        </td>
                </tr>
            }
        </tbody>
    </table>
    </div>
</body>

</html>


@section Scripts {
    <script>
        let table = new DataTable('#myTable');
    </script>
}


