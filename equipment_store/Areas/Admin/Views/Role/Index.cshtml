@using Microsoft.AspNetCore.Identity
@model IEnumerable<IdentityRole>

@{
    ViewData["title"] = "List role";
    Paginate pager = new Paginate();
    int pageNo = 0;
    if (ViewBag.Pager != null)
    {
        pager = ViewBag.Pager;
        pageNo = pager.CurrentPage;
    }
}
<a class="btn btn-success btn-sm" asp-action="Create" asp-controller="Role"><i class="fa-solid fa-plus"></i></a>
<table class="table" id="myTable">
    <thead>
        <tr>
            <th scope="col">Id</th>
            <th scope="col">Role</th>

            <th scope="col">Option</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>

                <th scope="row">@item.Id</th>
                <td>@item.Name</td>
                <td style="display:flex;">
                    <a style="margin-right:6px" class="btn btn-warning btn-sm" asp-action="Edit" asp-controller="Role" asp-route-Id="@item.Id"><i class="fa-solid fa-pen-nib"></i></a>
                    <a class="btn btn-danger btn-sm confirmDeletion" asp-action="Remove" asp-controller="Role" asp-route-Id="@item.Id"><i class="fa-solid fa-trash"></i></a>
                </td>

            </tr>
        }
    </tbody>
</table>

