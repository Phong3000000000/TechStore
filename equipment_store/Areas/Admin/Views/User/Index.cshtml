@{
    ViewData["title"] = "List category";
    Paginate pager = new Paginate();
    int pageNo = 0;
    if (ViewBag.Pager != null)
    {
        pager = ViewBag.Pager;
        pageNo = pager.CurrentPage;
    }
}

<html xmlns="http://www.w3.org/1999/xhtml">
    <head><title></title></head>
    <body>
    <a class="btn btn-success btn-sm" asp-action="Create" asp-controller="User"><i class="fa-solid fa-plus"></i></a>
    <table class="table" id="myTable">
        <thead>
            <tr>
                <th scope="col">Id</th>
                <th scope="col">UserName</th>
                <th scope="col">Email</th>
    @*             <th scope="col">PasswordHash</th> *@
                <th scope="col">Phone</th>
                <th scope="col">Role</th>
                <th scope="col">Option</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>

                    <th scope="row">@item.user.Id</th>
                    <td>@item.user.UserName</td>
                    <td>@item.user.Email</td>
@*                     <td>@item.user.PasswordHash</td> *@
                    <td>@item.user.PhoneNumber</td>
                    <td>@item.rolename</td>


                    <td style="display:flex;">
                        <a style="margin-right:6px" class="btn btn-warning btn-sm" asp-action="Edit" asp-controller="User" asp-route-Id="@item.user.Id"><i class="fa-solid fa-pen-nib"></i></a>
                        <a class="btn btn-danger btn-sm confirmDeletion" asp-action="Remove" asp-controller="User" asp-route-Id="@item.user.Id"><i class="fa-solid fa-trash "></i></a>
                    </td>

                </tr>
            }
        </tbody>
    </table>
    <partial name="_Paging" model="@pager"></partial>


    </body>
</html>

@section Scripts {
    <script>
        let table = new DataTable('#myTable');
    </script>
}