@model AppUserModel

<div class="col-9-md">
    <form style="width:50%; margin:20px auto" asp-action="Edit" enctype="multipart/form-data">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <h2 style="text-align:center">Cập nhât user</h2>
        <div class="form-group">
            <label>Username</label>
            <input asp-for="UserName" required class="form-control" />
            <span asp-validation-for="UserName" class="text-danger" />
        </div>
        <div class="form-group">
            <label>Email</label>
            <input asp-for="Email" required class="form-control"></input>
            <span asp-validation-for="Email" class="text-danger" />
        </div>
        <div class="form-group">
            <label>Password</label>
            <input asp-for="PasswordHash" required class="form-control"></input>
            <span asp-validation-for="PasswordHash" class="text-danger" />
        </div>
        <div class="form-group">
            <label>Phone</label>
            <input asp-for="PhoneNumber" class="form-control"></input>
            <span asp-validation-for="PhoneNumber" class="text-danger" />
        </div>
        <div class="form-group">
            <label>Roles</label>
            <select asp-for="RoleId" class="form-control" asp-items="@ViewBag.Roles">
            </select>
            <span asp-validation-for="RoleId" class="text-danger" />
        </div>
        <div class="form-group" style="float:right">
            <a asp-action="Index" class="btn btn-danger btn-sm">Back</a>
            <input value="Edit" type="submit" class="btn btn-success btn-sm" />
        </div>


    </form>

</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");

    }

}
