@model IEnumerable<OrderDetails>
@{
    ViewData["title"] = "Order Details";
    decimal total = 0; // Store total amount
    decimal subtotal = 0;
   
}

<!DOCTYPE html>

<html>
<head>

</head>
<body>
    <h3>Order Details</h3>


    <div class="table table-responsive">
    <table class="table" id="detail_order">
        <thead>
            <tr>
                <th>Id</th>
                <th>Order Code</th>
                <th>UserName</th>
                <th>Product Name</th>
                <th>Product Price</th>
                <th>Quantity</th>
                <th>Subtotal</th>
              
                    
            </tr>
        </thead>
        <tbody>
           
            @foreach (var item in Model)
            {
                subtotal = item.Quantity * item.Price; //số lượng * giá
                total += subtotal; 
                <tr>
                    <input type="hidden" asp-for="@item.OrderCode" class="getId" />
                    <td>@item.Id</td>
                    <td>@item.OrderCode</td>
                    <td>@item.UserName</td>
                    <td>@item.Product.Name</td>
                    <td>@item.Price.ToString("#,##0 VNĐ")</td>
                    <td>@item.Quantity</td>
           
                    <td>@subtotal</td>

                </tr>
            }
            <tr>
                    <td>Total:</td>
                <td></td>
                <td></td>
                <td></td>
                <td></td>

                <td> </td>
               
                <td>@total.ToString("#,##0 VNĐ")</td>
                    
           
            </tr>
            <tr>
                <td>Validity: </td>
                <td></td>
                <td></td>
                <td></td>
                <td></td>
                <td></td>

                <td >
                    @if (@ViewBag.status==1)
                    {
                        <select class="form-control select-update-order">

                            <option value="1" selected>Đơn hàng mới</option>
                            <option value="0">Đã xử lý</option>


                        </select>
                    }
                    else
                    {
                        <select class="form-control select-update-order">

                            <option value="1" >Đơn hàng mới</option>
                            <option value="0" selected>Đã xử lý</option>


                        </select>
                    }

                 

                </td>
            </tr>
        </tbody>
    </table>
   
    </div>
</body>

</html>
@section Scripts{
    <script>
        new DataTable('#detail_order', {
            layout: {
                topStart: {
                    buttons: ['pdf','print']
                }
            }
        });
    </script>

    <script>
        $(document).ready(function () {
            $('.select-update-order').change(function () {
                var status = $(this).val(); //status = 1
                var ordercode = $('.getId').val(); //
                $.ajax({
                    type: "POST",
                    url: "@Url.Action("UpdateOrder")",
                    data: { status: status, ordercode: ordercode }, // Send data to the server
                    success: function (result) {
                        // Handle successful update
                        if (result.success) {

                            Swal.fire({
                                title: "Cập nhật đơn hàng thành công",
                                icon: "success",
                                draggable: true
                            });
                        } else {
                          
                            Swal.fire("Cập nhật đơn hàng thất bại." + result.message);
                           
                        }
                    }
                   
                });
            });
        });
    </script>
}





    